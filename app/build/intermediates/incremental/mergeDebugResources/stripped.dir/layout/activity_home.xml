<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                   

    
                         
                                
                                                         
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.HomeActivity" android:tag="layout/activity_home_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:tag="binding_1"                   
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/retry"
            android:tag="binding_2"            
            android:drawableTop="@drawable/ic_retry"
            android:text="@string/failed_to_load_retry"
            android:gravity="center"
                                                        
            android:padding="@dimen/margin_10dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
         